<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Epicure_Me.FavouritesPage"
             Title="FavouritesPage">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Clear All" Command="{Binding ClearAllCommand}" />
	</ContentPage.ToolbarItems>

	<CollectionView ItemsSource="{Binding FavouriteRecipes}">
		<CollectionView.ItemTemplate>
			<DataTemplate>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<Label Text="{Binding Name}" FontAttributes="Bold" />
					<Button Text="Remove" Command="{Binding Source={x:Reference Page}, Path=BindingContext.RemoveFromFavouritesCommand}" CommandParameter="{Binding .}" Grid.Row="1" />
				</Grid>
			</DataTemplate>
		</CollectionView.ItemTemplate>
	</CollectionView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Epicure_Me.DetailRecipePage"
             Title="DetailRecipePage">
	<ScrollView>
		<StackLayout>
			<!-- Recipe Image -->
			<Image Source="{Binding Image}" Aspect="AspectFit" HeightRequest="200" />

			<!-- Recipe Title -->
			<Label Text="{Binding Title}" FontSize="24" HorizontalOptions="CenterAndExpand" />
			
			<!-- Ingredients -->
			<Label Text="Ingredients:" FontSize="20" />
			<ListView ItemsSource="{Binding ExtendedIngredients}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<Label Text="{Binding Name}" />
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>

			<!-- Instructions -->
			<Label Text="Instructions:" FontSize="20" />
			<Label Text="{Binding Instructions}" />

			<!-- Other Recipe Information -->
			<!-- Add labels and bindings for other recipe information here -->
		</StackLayout>
	</ScrollView>
</ContentPage>